<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nom et numÃ©ro -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/pokemonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pokemon Name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/pokemonNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#123"
                android:textSize="18sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Image et Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/pokemonImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Pokemon Image" />

            <TextView
                android:id="@+id/pokemonType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:padding="4dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Statistiques -->
        <!-- Add these TextViews inside the LinearLayout in activity_pokemon_details.xml -->

        <TextView
            android:id="@+id/pokemonTypes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Types"
            android:textColor="#FFFFFF"
            android:padding="4dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pokemonAbilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abilities"
            android:textColor="#FFFFFF"
            android:padding="4dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pokemonStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stats"
            android:textColor="#FFFFFF"
            android:padding="4dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stats"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView android:id="@+id/statHp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="HP: 0" android:textColor="#FFFFFF"/>
            <TextView android:id="@+id/statAttack" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Attack: 0" android:textColor="#FFFFFF"/>
            <!-- Ajoute des TextView pour chaque statistique -->
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/pokemonDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description of Pokemon"
            android:paddingTop="16dp"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
